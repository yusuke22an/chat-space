.chat-side
  .side-header
    .side-header__box
      .side-header__box__user-name 
        = current_user.name
      %ul.side-header__box__menu
        %li.side-header__box__menu__new-group
          =link_to  new_group_path, class:"a" do
            %i.fa.fa-edit
            -# =fa_icon 'pencil-square-o', class:'icon' 
        %li.side-header__box__menu__edit-user
          =link_to edit_user_path(current_user), class:"a" do
            %i.fa.fa-cog
            -# =fa_icon 'cog', class:'icon'
  .groups
    - current_user.groups.each do |group|
      .group
        = link_to group_messages_path(group) do
          .group-name
            = group.name
          .latest-message
          = group.show_last_message

